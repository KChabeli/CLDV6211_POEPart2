@model IEnumerable<EventEaseBookingSystem.Models.BookingDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Search", "BookingDetails", FormMethod.Get))
{
    <div class="form-group" style="display: flex; gap: 10px; max-width: 500px;">
        <input type="text" name="query" class="form-control" placeholder="Search by Booking ID or Event Name" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function refreshBookingTable() {
        $("#bookingTableContainer").load('@Url.Action("RefreshTable", "BookingDetails")');
    }

    setInterval(refreshBookingTable, 10000); // Refresh every 10 seconds
</script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfTickets)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VenueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VenueLocation)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTickets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VenueLocation)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookingDetailsId }) |
                @Html.ActionLink("Details", "Details", new { id = item.BookingDetailsId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BookingDetailsId })
            </td>
        </tr>
    }

</table>
